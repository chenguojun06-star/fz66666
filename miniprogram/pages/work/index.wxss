page {
  background: var(--color-bg-page);
  padding-bottom: calc(60px + env(safe-area-inset-bottom));
}

/* 搜索栏/搜索结果样式已移至 app.wxss 统一管理 */

.result-item:last-child {
  border-bottom: none;
}

.result-item-hover {
  background: rgba(224, 242, 254, 0.3);
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6px;
}

.result-type {
  padding: 2px 8px;
  font-size: var(--font-size-xs);
  font-weight: 500;
  color: #ffffff;
  background: var(--color-primary);
  border-radius: var(--radius-full);
}

.result-status {
  font-size: var(--font-size-sm);
  font-weight: 500;
}

.result-info {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 4px;
}

.result-order,
.result-style {
  font-size: 13px;
  color: var(--color-text-primary);
}

.result-detail {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  margin-top: 4px;
}

/* 无搜索结果 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 20px;
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  margin-bottom: 12px;
}

.no-results-icon {
  font-size: 48px;
  margin-bottom: 12px;
  opacity: 0.3;
}

.no-results-text {
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
  margin-bottom: 16px;
}

.no-results .close-btn {
  padding: 8px 24px;
  font-size: var(--font-size-base);
  color: var(--color-text-primary);
  background: rgba(224, 242, 254, 0.8);
  border: 1px solid rgba(224, 242, 254, 0.9);
  border-radius: var(--radius-full);
}

.tabbar-actions {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 12px;
}

.tabbar {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(5, minmax(0, 1fr));
  gap: 4px;
  padding: 4px;
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-full);
}

.tab {
  padding: 5px 6px;
  border-radius: var(--radius-full);
  background: rgba(255, 255, 255, 0.55);
  color: var(--color-text-secondary);
  font-size: var(--font-size-xs);
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border: 1px solid rgba(255, 255, 255, 0.7);
  box-shadow:
    0 6px 14px rgba(15, 23, 42, 0.05),
    inset 0 1px 0 rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

.tab-active {
  background: rgba(224, 242, 254, 0.8); /* 很浅的雾蓝色 */
  color: var(--color-text-primary);
  border: 1px solid rgba(224, 242, 254, 0.9);
  font-weight: 600;
}

.tab-hover {
  background: rgba(224, 242, 254, 0.8); /* 很浅的雾蓝色 */
}

.tabbar-scan {
  padding: 1px 18px;
  font-size: var(--font-size-sm);
  border-radius: var(--radius-full);
  white-space: nowrap;
}

.grid-menu {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-box {
  width: 90rpx;
  height: 90rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.iconfont {
  font-size: 36rpx;
  opacity: 0.8;
}

.bg-soft-blue {
  background-color: var(--color-blue-light);
  color: var(--color-primary);
}

.bg-soft-slate {
  background-color: var(--color-bg-gray);
  color: var(--color-text-primary);
}

.bg-soft-amber {
  background-color: rgba(253, 230, 138, 0.45); /* 正确的琥珀色背景，原先错误引用了蓝色color-border-light */
  color: #92400e; /* 深棕色，对比度≥6:1 */
}

.bg-soft-green {
  background-color: rgba(167, 243, 208, 0.4); /* 正确的绿色背景，原先错误引用了蓝色color-blue-lighter */
  color: #065f46; /* 深绿色，对比度≥6:1 */
}

.bg-soft-indigo {
  background-color: #ede9fe;
  color: #6d28d9;
}

.menu-name {
  font-size: 24rpx;
  color: var(--color-text-primary);
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.title-stats {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

.title-stat-value {
  font-weight: var(--font-weight-semibold);
  font-size: var(--font-size-sm);
}

.title-stat-primary {
  color: var(--color-primary);
}

.title-stat-accent {
  color: var(--color-warning);
}

.title-stat-sep {
  color: var(--color-text-disabled);
}

.section-title {
  margin-top: 10px;
  font-size: var(--font-size-base); /* 三级标题 */
  font-weight: 600;
  color: var(--color-text-primary);
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10px;
  margin-top: 8px;
}

.home-stats-secondary {
  margin-top: 10px;
}

.stat-card {
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  padding: 10px 12px;
  background: var(--color-bg-card);
}

.stat-value {
  font-size: var(--font-size-base); /* 正文字体 */
  font-weight: 600;
  color: var(--color-text-primary);
}

.stat-label {
  font-size: var(--font-size-sm); /* 辅助字体 */
  color: var(--color-text-secondary);
}

.home-entries {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 10px;
  margin-top: 10px;
}

.home-entry {
  border: 1px solid var(--color-border);
  background: var(--color-bg-card);
  color: var(--color-text-primary);
  border-radius: var(--radius-full);
  padding: 8px 8px;
  text-align: center;
  font-size: var(--font-size-sm);
}

.home-activity {
  padding: 10px 12px;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  margin-top: 10px;
  background: var(--color-bg-card);
}

.home-activity-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 10px;
}

.home-activity-content {
  flex: 1;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.home-activity-time {
  font-size: var(--font-size-sm);
  color: var(--color-text-disabled);
  white-space: nowrap;
}

.item-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 10px;
}

/* ========== 订单卡片：左图右文布局 ========== */
.item-body {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

/* 款式图片 */
.item-cover-box {
  flex-shrink: 0;
  width: 120rpx;
  height: 140rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: var(--color-bg-gray);
}

.item-cover {
  width: 100%;
  height: 100%;
  display: block;
}

.item-cover-empty {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: var(--color-text-disabled);
  text-align: center;
  line-height: 1.4;
  background: var(--color-bg-gray);
}

/* 右侧信息区 */
.item-info {
  flex: 1;
  min-width: 0;
}

/* 元数据行 */
.item-meta,
.item-qty-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 4rpx;
  margin-top: 6rpx;
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.meta-label {
  color: var(--color-text-disabled);
}

.meta-value {
  color: var(--color-text-secondary);
}

.meta-value-bold {
  font-weight: 600;
  color: var(--color-text-primary);
}

.meta-sep {
  color: var(--color-text-disabled);
  margin: 0 4rpx;
}

.item-tags {
  display: flex;
  align-items: center;
  gap: 6px;
  flex-shrink: 0;
}

.tag-process {
  background: rgba(16, 185, 129, 0.12);
  color: #047857; /* 加深绿色，对比度≥4.5:1 */
}

/* 已完成标签样式 */
.tag-completed {
  background: rgba(156, 163, 175, 0.15);
  color: var(--color-text-secondary);
}

/* 已完成订单列表项样式 */
.list-item-closed {
  opacity: 0.7;
}

/* 已完成进度条样式 */
.progress-fill-completed {
  background: linear-gradient(90deg, var(--color-text-disabled) 0%, var(--color-text-secondary) 100%) !important;
}

.item-head-actions {
  display: flex;
  align-items: center;
  gap: 8px;
}

.order-checkbox {
  transform: scale(0.9);
}

.item-title {
  flex: 1;
  min-width: 0;
  font-size: var(--font-size-base);
  font-weight: 600;
}

.order-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
  padding: 0 8rpx;
  font-size: 18rpx;
  line-height: 1;
  border-radius: var(--radius-full);
  font-weight: 600;
}

.order-tag-plate {
  color: var(--color-primary);
  background: rgba(59, 130, 246, 0.12);
}

.order-tag-urgent {
  color: var(--color-danger);
  background: rgba(239, 68, 68, 0.12);
}

.order-tag-normal {
  color: var(--color-text-secondary);
  background: var(--color-bg-gray);
}

.item-title-closed {
  color: var(--color-text-disabled);
}

.item-sub {
  display: block;
  width: 100%;
  margin-top: 6px;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.item-sub-inline {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 6px;
}

.item-sub-sep {
  color: var(--color-text-disabled);
}

.size-plain {
  margin-top: 6px;
}

.size-plain-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10px;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.size-plain-label {
  color: var(--color-text-secondary);
  min-width: 32px;
}

.size-plain-cell {
  min-width: 22px;
  text-align: center;
}

.size-plain-summary {
  color: var(--color-text-primary);
  font-weight: 600;
  white-space: nowrap;
}

/* 交期信息 */
.delivery-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 4px;
  padding: 0 2px;
}

.delivery-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

.delivery-days {
  font-size: var(--font-size-xs);
  font-weight: 600;
  flex-shrink: 0;
}

.days-safe {
  color: var(--color-success);
}

.days-warn {
  color: var(--color-warning);
}

.days-urgent {
  color: var(--color-error);
}

.days-overdue {
  color: #dc2626;
  font-weight: 700;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 8px;
}

.action-btn-inline {
  padding: 4px 10px;
  font-size: 10px;
}

.section-title {
  margin-top: 10px;
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text-primary);
}

.rollback-card {
  margin-top: 10px;
  padding: 12px;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  background: var(--color-bg-card);
}

.batch-card {
  margin-top: 10px;
  padding: 12px;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  background: var(--color-bg-card);
}

.batch-meta {
  margin-top: 6px;
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

/* ============ 通用搜索栏 ============ */
.universal-search {
  display: flex;
  align-items: center;
  gap: 4px;
  margin-bottom: 8px;
  padding: 3px 6px;
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-full);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.universal-search .search-box {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 3px 10px;
  background: rgba(224, 242, 254, 0.3);
  border: 1px solid rgba(224, 242, 254, 0.5);
  border-radius: var(--radius-full);
}

.universal-search .search-icon {
  font-size: var(--font-size-sm);
  margin-right: 4px;
}

.universal-search .search-input {
  flex: 1;
  font-size: var(--font-size-xs);
  color: var(--color-text-primary);
}

.universal-search .search-btn {
  padding: 3px 18px;
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--color-text-primary);
  background: rgba(224, 242, 254, 0.8);
  border: 1px solid rgba(224, 242, 254, 0.9);
  border-radius: var(--radius-full);
  box-shadow: 0 2px 6px rgba(59, 130, 246, 0.15);
  white-space: nowrap;
}

.universal-search .clear-btn {
  padding: 3px 18px;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  background: var(--color-bg-gray);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-full);
  white-space: nowrap;
}

/* 生成菲号弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 16px;
}

.modal-box {
  width: 100%;
  max-width: 90vw;
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  overflow: hidden;
  transform: scale(1);
  animation: modalFadeIn 0.2s ease-out;
}

.modal-box.wide {
  max-width: 90vw;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-head {
  padding: 12px 14px;
  background: rgba(255, 255, 255, 0.8);
  color: var(--color-text-primary);
  border-bottom: 1px solid var(--color-border);
  font-size: var(--font-size-base);
  font-weight: 500;
  flex-shrink: 0;
}

.modal-body {
  padding: 12px;
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  min-height: 0;
}

.cf-list {
  background: var(--color-bg-light);
  border-radius: var(--radius-sm);
  padding: 8px;
  margin-bottom: 10px;
}

.cf-item {
  display: flex;
  justify-content: space-between;
  padding: 6px 0;
  border-bottom: 1px solid var(--color-border-light);
}

.cf-item:last-child {
  border-bottom: none;
}

.cf-k {
  font-size: var(--font-size-xs);
  color: var(--color-text-disabled);
}

.cf-v {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
  max-width: 160px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cf-v.hl {
  color: var(--color-text-secondary);
  font-weight: 500;
}

.modal-btns {
  display: flex;
  gap: 8px;
  padding: 10px 12px;
  border-top: 1px solid #f0f0f0;
  flex-shrink: 0;
}

.mbtn {
  flex: 1;
  padding: 10px;
  border-radius: var(--radius-full);
  text-align: center;
  font-size: var(--font-size-sm);
  font-weight: 500;
}

.mbtn-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.mbtn.cancel {
  background: rgba(255, 255, 255, 0.6);
  color: var(--color-text-secondary);
  border: 1px solid var(--color-border);
}

.mbtn.ok {
  background: var(--gradient-primary);
  color: var(--color-text-primary);
  border: 1px solid rgba(147, 197, 253, 0.5);
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
}

.mbtn.ok.off {
  opacity: 0.5;
}

/* 高亮显示从铃铛跳转的订单 */
.list-item-highlight {
  border: 2rpx solid var(--color-primary);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.2);
  animation: highlight-pulse 2s ease-in-out;
}

@keyframes highlight-pulse {
  0%, 100% {
    box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.2);
  }
  50% {
    box-shadow: 0 4rpx 24rpx rgba(59, 130, 246, 0.4);
  }
}

/* 延期订单样式 */
.list-item-overdue {
  border-left: 4rpx solid #ef4444;
  background: linear-gradient(90deg, rgba(239, 68, 68, 0.03) 0%, transparent 100%);
}

.overdue-indicator {
  display: inline-block;
  margin-left: 12rpx;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  color: #dc2626;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 8rpx;
}

