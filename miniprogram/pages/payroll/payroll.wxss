/* pages/payroll/payroll.wxss */
@import '../../styles/design-tokens.wxss';
@import '../../styles/page-utils.wxss';

.page {
  min-height: 100vh;
  background: var(--color-bg-page);
  padding-bottom: 40rpx;
}

/* 顶部统计卡片 */
.summary-card {
  margin: 24rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, var(--color-primary-light) 0%, var(--color-primary) 100%);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
}

.summary-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 24rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.summary-row:last-child {
  margin-bottom: 0;
}

.summary-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: var(--border-radius-md);
  margin: 0 8rpx;
}

.summary-item:first-child {
  margin-left: 0;
}

.summary-item:last-child {
  margin-right: 0;
}

.summary-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}

.summary-value.primary {
  font-size: 44rpx;
  color: #ffd700;
}

/* 筛选器 */
.filter-bar {
  margin: 24rpx;
  background: var(--color-bg-card);
  border-radius: var(--border-radius-lg);
  padding: 8rpx;
  box-shadow: var(--shadow-sm);
}

.filter-tabs {
  display: flex;
  justify-content: space-between;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: var(--color-text-secondary);
  border-radius: var(--border-radius-md);
  transition: all 0.3s;
}

.filter-tab.active {
  background: var(--color-primary);
  color: #ffffff;
  font-weight: 600;
}

/* 自定义日期选择 */
.custom-date {
  display: flex;
  justify-content: space-between;
  margin: 0 24rpx 24rpx;
  gap: 16rpx;
}

.date-picker {
  flex: 1;
  padding: 20rpx;
  background: var(--color-bg-card);
  border-radius: var(--border-radius-md);
  text-align: center;
  font-size: 28rpx;
  color: var(--color-text-primary);
  border: 2rpx solid var(--color-border);
}

/* 明细区域 */
.detail-section {
  margin: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  padding-left: 8rpx;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: var(--color-primary-light);
  border-radius: var(--border-radius-md);
  color: var(--color-primary);
}

.sort-text {
  font-size: 26rpx;
  font-weight: 600;
}

.sort-icon {
  font-size: 24rpx;
  font-weight: 700;
}

/* empty-state / empty-icon / empty-text → page-utils.wxss */

/* 工序记录卡片 */
.record-item {
  background: var(--color-bg-card);
  border-radius: var(--border-radius-lg);
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: var(--shadow-sm);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-info {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.style-info {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

.record-detail {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.color-size {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-right: 16rpx;
}

.process {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: var(--color-primary-light);
  color: var(--color-primary);
  border-radius: var(--border-radius-sm);
  font-size: 24rpx;
  font-weight: 600;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12rpx;
  border-top: 2rpx solid var(--color-border-light);
}

.calculation {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.quantity {
  color: var(--color-text-primary);
  font-weight: 600;
}

.multiply,
.equals {
  color: var(--color-text-disabled);
  margin: 0 8rpx;
}

.unit-price {
  color: var(--color-text-secondary);
}

.amount {
  color: var(--color-error);
  font-weight: 700;
  font-size: 32rpx;
}

.time {
  font-size: 24rpx;
  color: var(--color-text-disabled);
}

/* 底部统计 */
.bottom-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  padding: 24rpx;
  background: linear-gradient(
    90deg,
    rgba(var(--color-primary-rgb), 0.1) 0%,
    rgba(var(--color-primary-rgb), 0.05) 100%
  );
  border-radius: var(--border-radius-lg);
  border: 2rpx solid var(--color-primary-light);
}

.bottom-label {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.bottom-amount {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-error);
}
