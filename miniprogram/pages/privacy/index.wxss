.page {
  padding: 32rpx;
  background: #f7f8fa;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.update-date {
  font-size: 24rpx;
  color: #999;
}

.heading {
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 16rpx;
}

.sub-heading {
  font-size: 27rpx;
  font-weight: 600;
  color: #444;
  margin-top: 20rpx;
  margin-bottom: 8rpx;
}

.body {
  font-size: 27rpx;
  color: #555;
  line-height: 1.8;
}

.footer {
  text-align: center;
  font-size: 24rpx;
  color: #bbb;
  padding: 32rpx 0 48rpx;
}
