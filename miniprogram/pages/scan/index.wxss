/* 极简紧凑风格 */
@import './scan-result-modal.wxss';
@import '/styles/inline-selector.wxss';

page {
  background: var(--color-bg-page);
  min-height: 100vh;
  padding-bottom: calc(60px + env(safe-area-inset-bottom));
}
.page {
  padding: 10px;
}

/* ===== 顶部标签栏 ===== */
.top-bar {
  background: var(--color-bg-card);
  border-radius: var(--radius-xl);
  padding: 8px;
  margin-bottom: 8px;
  border: 1px solid var(--color-border);
}

.auto-detect-switch {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8px 12px;
  margin-bottom: 8px;
  background: var(--color-bg-card);
  border-radius: var(--radius-md);
  gap: 8px;
}

.switch-label {
  font-size: var(--font-size-sm); /* 菜单字体 */
  color: var(--color-text-secondary);
  font-weight: 500;
}

.auto-mode-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px;
  background: var(--gradient-primary-solid);
  border-radius: var(--radius-md);
  gap: 8px;
}

.tip-icon {
  font-size: var(--font-size-xl); /* 一级标题/图标 */
}

.tip-text {
  font-size: var(--font-size-sm); /* 菜单字体 */
  color: var(--color-primary);
  font-weight: 500;
}

.type-tabs {
  display: flex;
  gap: 4px;
}
.tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px 10px;
  border-radius: var(--radius-full);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid rgba(255, 255, 255, 0.7);
  box-shadow:
    0 8px 18px rgba(15, 23, 42, 0.08),
    inset 0 1px 0 rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}
.tab.on {
  background: var(--gradient-primary-alpha);
  color: var(--color-text-primary);
  border: 1px solid rgba(147, 197, 253, 0.5);
}
.tab-hover {
  opacity: 0.8;
  transform: scale(0.98);
}
.tab-ico {
  width: 16px;
  height: 16px;
  margin-bottom: 2px;
}
.tab.on .tab-ico {
  filter: none;
}
.tab.more {
  max-width: 32px;
  justify-content: center;
}
.more-dot {
  font-size: var(--font-size-base);
  letter-spacing: -2px;
  color: var(--color-text-disabled);
}

/* ===== 今日统计卡片（顶部） ===== */
.today-stats-card {
  background: var(--color-bg-card);
  border-radius: var(--radius-xl);
  padding: 12px;
  margin-bottom: 8px;
  border: 1px solid var(--color-border);
}
.tsc-head {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  gap: 12px;
}
.tsc-title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text-primary);
}
.tsc-refresh {
  font-size: var(--font-size-xs);
  color: var(--color-primary);
  padding: 2px 10px;
  border-radius: var(--radius-full);
  background: rgba(224, 242, 254, 0.5);
}
.tsc-refresh.off { opacity: 0.4; pointer-events: none; }
.tsc-grid {
  display: flex;
  gap: 8px;
}
.tsc-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px 4px;
  background: rgba(224, 242, 254, 0.3);
  border-radius: var(--radius-md);
  border: 1px solid rgba(224, 242, 254, 0.5);
}
.tsc-item.tsc-hl {
  background: rgba(59, 130, 246, 0.08);
  border-color: rgba(59, 130, 246, 0.15);
}
.tsc-num {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: var(--color-text-primary);
}
.tsc-item.tsc-hl .tsc-num {
  color: var(--color-primary);
}
.tsc-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  margin-top: 2px;
}

/* ===== 快捷入口卡片 ===== */
.quick-entry-row {
  display: flex;
  gap: 8px;
  margin-bottom: 8px;
}
.quick-entry-card {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px 12px;
  background: var(--color-bg-card);
  border-radius: var(--radius-xl);
  border: 1px solid var(--color-border);
  gap: 8px;
}
.quick-entry-card-hover {
  background: rgba(224, 242, 254, 0.5);
  transform: scale(0.97);
}
.qe-icon {
  font-size: 22px;
  flex-shrink: 0;
}
.qe-text {
  display: flex;
  flex-direction: column;
  gap: 1px;
}
.qe-title {
  font-size: var(--font-size-sm);
  font-weight: 600;
  color: var(--color-text-primary);
  line-height: 1.2;
}
.qe-desc {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  line-height: 1.2;
}

/* ===== 扫码区（一行布局） ===== */
.scan-area-big {
  background: var(--color-bg-card);
  border-radius: var(--radius-xl);
  padding: 10px;
  margin-bottom: 8px;
  border: 1px solid var(--color-border);
}
.scan-row {
  display: flex;
  align-items: center;
  gap: 0;
  justify-content: center;
  margin-bottom: 8px;
}
.scan-btn-big {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  flex: 1;
  width: 100%;
  max-width: none;
  min-width: 0;
  padding: 0 12px;
  height: 52px;
  box-sizing: border-box;
  overflow: hidden;
  background: var(--gradient-action);
  color: #ffffff;
  border-radius: var(--radius-full);
  font-size: var(--font-size-lg);
  font-weight: 700;
  border: none;
  box-shadow: 0 6px 20px rgba(37, 99, 235, 0.40);
}
.scan-btn-big.off {
  opacity: 0.4;
  pointer-events: none;
}
.scan-btn-big-hover {
  opacity: 0.88;
  transform: scale(0.97);
  box-shadow: 0 4px 14px rgba(37, 99, 235, 0.35);
}
.scan-btn-icon {
  font-size: 20px;
}
.scan-btn-text-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 1.1;
}

.scan-btn-main {
  font-size: 18px;
  font-weight: 800;
  white-space: nowrap;
}

.scan-btn-sub {
  font-size: 13px;
  font-weight: 600;
  color: var(--color-text-secondary);
  white-space: nowrap;
}

.warehouse-input-row {
  margin-bottom: 8px;
}

.warehouse-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary, #666);
  margin-bottom: 6px;
}

.warehouse-option-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 8px;
}

.warehouse-chip {
  padding: 4px 14px;
  border-radius: var(--radius-full);
  font-size: var(--font-size-sm);
  border: 1px solid rgba(147, 197, 253, 0.6);
  background: rgba(239, 246, 255, 0.7);
  color: var(--color-text-primary, #333);
}

.warehouse-chip--active {
  background: var(--primary-color, #2D7FF9);
  color: #fff;
  border-color: var(--primary-color, #2D7FF9);
}

.warehouse-chip--clear {
  background: rgba(254, 226, 226, 0.6);
  border-color: rgba(252, 165, 165, 0.5);
  color: var(--color-danger, #e53e3e);
}

.warehouse-chip--disabled {
  opacity: 0.4;
  pointer-events: none;
}

.warehouse-input-field {
  width: 100%;
  height: 40px;
  border: 1px solid rgba(224, 242, 254, 0.5);
  border-radius: var(--radius-md);
  padding: 0 12px;
  font-size: var(--font-size-sm);
  box-sizing: border-box;
}
.wh-box-inline {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 10px;
  padding: 6px 12px;
  background: rgba(224, 242, 254, 0.3);
  border-radius: var(--radius-full);
  border: 1px solid rgba(224, 242, 254, 0.5);
}
.wh-box-inline .wh-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  flex-shrink: 0;
}
.wh-box-inline .wh-input {
  flex: 1;
  font-size: var(--font-size-sm);
  height: 28px;
}

/* ===== 旧扫码区（兼容保留） ===== */
.scan-area {
  display: flex;
  gap: 8px;
  background: var(--color-bg-card);
  border-radius: var(--radius-xl);
  padding: 8px;
  padding-right: 50px;
  margin-bottom: 8px;
  border: 1px solid var(--color-border);
}

.scan-type-picker {
  flex: 0 0 112px;
  width: 112px;
  max-width: 112px;
  min-width: 112px;
  box-sizing: border-box;
  overflow: hidden;
}

.picker-display {
  display: flex;
  align-items: center;
  gap: 4px;
  background: var(--gradient-primary-solid);
  border-radius: var(--radius-full);
  width: 100%;
  padding: 0 12px;
  height: 40px;
  box-sizing: border-box;
  justify-content: center;
}

.picker-label {
  font-size: 13px;
  color: var(--color-primary);
  font-weight: 500;
}

.picker-arrow {
  font-size: 10px;
  color: var(--color-primary);
  margin-left: 2px;
}

.scan-input {
  flex: 0 0 44px;
  width: 44px;
  max-width: 44px;
  min-width: 44px;
  background: var(--color-bg-card);
  border-radius: var(--radius-md);
  padding: 0;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(224, 242, 254, 0.5);
  box-sizing: border-box;
}
.scan-input input {
  width: 100%;
  height: 44px;
  font-size: var(--font-size-sm);
  text-align: center;
}
.scan-btn {
  display: flex;
  align-items: center;
  padding: 0 18px;
  height: 36px;
  background: rgba(255, 255, 255, 0.6);
  color: var(--color-text-primary);
  border: 1px solid rgba(255, 255, 255, 0.7);
  border-radius: var(--radius-full);
  font-size: var(--font-size-base);
  font-weight: 500;
  box-shadow:
    0 8px 18px rgba(15, 23, 42, 0.08),
    inset 0 1px 0 rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}
.scan-btn.off {
  opacity: 0.5;
}
.scan-btn-hover {
  background: rgba(224, 242, 254, 0.8); /* 很浅的雾蓝色 */
}
.scan-ico {
  width: 16px;
  height: 16px;
}

/* ===== 质检选项 ===== */
.qc-bar {
  display: flex;
  gap: 6px;
  background: var(--color-bg-card);
  border-radius: var(--radius-xl);
  padding: 8px;
  margin-bottom: 8px;
  border: 1px solid var(--color-border);
}
.qc-opt {
  flex: 1;
  text-align: center;
  padding: 6px 4px;
  border-radius: var(--radius-full);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  background: var(--color-bg-card);
}
.qc-opt-hover {
  background: rgba(224, 242, 254, 0.8);
}
.qc-opt.on.pass {
  background: rgba(224, 242, 254, 0.8); /* 很浅的雾蓝色 */
  color: var(--color-text-primary);
}
.qc-opt.on.fail {
  background: rgba(224, 242, 254, 0.8); /* 很浅的雾蓝色 */
  color: var(--color-text-primary);
}
.qc-opt.on.fix {
  background: rgba(224, 242, 254, 0.8); /* 很浅的雾蓝色 */
  color: var(--color-text-primary);
}

/* ===== 次品详情 ===== */
.defect-box {
  background: #fff7ed;
  border-radius: var(--radius-xl);
  padding: 10px;
  margin-bottom: 8px;
  border: 1px solid #fed7aa;
}
.df-row {
  display: flex;
  align-items: center;
  padding: 6px 0;
  border-bottom: 1px solid #f5f0e8;
}
.df-row:last-child {
  border-bottom: none;
}
.df-label {
  width: 36px;
  font-size: var(--font-size-xs);
  color: var(--color-text-disabled);
}
.df-picker {
  flex: 1;
}
.df-val {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
}
.df-photos {
  display: flex;
  gap: 6px;
  flex: 1;
}
.df-photo {
  position: relative;
  width: 40px;
  height: 40px;
  border-radius: var(--radius-md);
  overflow: hidden;
}
.df-photo image {
  width: 100%;
  height: 100%;
}
.df-del {
  position: absolute;
  top: 2px;
  right: 2px;
  width: 16px;
  height: 16px;
  background: rgba(15, 23, 42, 0.7);
  color: #fff;
  font-size: var(--font-size-xs);
  text-align: center;
  line-height: 16px;
  border-radius: var(--radius-full);
}
.df-add {
  width: 40px;
  height: 40px;
  border: 1px dashed #d1d5db;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-xl); /* 一级标题/图标 */
  color: #cbd5e1;
}
.df-add.off {
  opacity: 0.4;
}

/* ===== 仓库输入 ===== */
.wh-box {
  display: flex;
  align-items: center;
  gap: 8px;
  background: var(--color-bg-card);
  border-radius: var(--radius-full);
  padding: 8px 12px;
  margin-bottom: 8px;
  border: 1px solid var(--color-border);
}
.wh-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-disabled);
}
.wh-input {
  flex: 1;
  font-size: var(--font-size-sm);
}

/* ===== 扫码结果 ===== */
.result {
  border-radius: var(--radius-xl);
  padding: 10px;
  margin-bottom: 8px;
}
.result.ok {
  background: #e8f5e9;
}
.result.err {
  background: #ffebee;
}
.res-top {
  display: flex;
  align-items: center;
  gap: 8px;
}
.res-tag {
  padding: 2px 8px;
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
  font-weight: 600;
}
.res-tag.ok {
  background: #2e7d32;
  color: #fff;
}
.res-tag.err {
  background: var(--color-error);
  color: #fff;
}
.res-msg {
  flex: 1;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}
.res-undo {
  padding: 4px 10px;
  background: var(--color-bg-card);
  border: 1px solid var(--color-error);
  color: var(--color-error);
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
}
.res-undo-hover {
  background: rgba(224, 242, 254, 0.8);
}
.res-info {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-top: 8px;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}
.scan-mode-tip {
  margin-top: 8px;
  padding: 0 4px;
}
.scan-mode-tip text {
  font-size: 12px;
  color: var(--color-text-secondary);
  line-height: 1.4;
}
.res-order {
  color: var(--color-text-primary);
  font-weight: 600;
}
.res-style {
  color: var(--color-text-primary);
}
.res-proc {
  padding: 2px 8px;
  background: rgba(16, 185, 129, 0.12);
  color: #047857; /* 加深绿色，确保小字件对比度≥4.5:1 */
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
}

/* 单价警告样式 */
.res-price-warn {
  color: var(--color-warning);
  font-weight: 500;
}

/* 单价提示信息 */
.res-hint {
  display: flex;
  align-items: flex-start;
  gap: 6px;
  margin-top: 8px;
  padding: 8px 10px;
  background: rgba(251, 191, 36, 0.12);
  border: 1px solid rgba(251, 191, 36, 0.3);
  border-radius: 10px;
}
.hint-icon {
  flex-shrink: 0;
  font-size: var(--font-size-base);
}
.hint-text {
  flex: 1;
  font-size: var(--font-size-xs);
  color: #92400e;
  line-height: 1.4;
}

/* ===== 区块通用 ===== */
.section {
  background: var(--color-bg-card);
  border-radius: var(--radius-xl);
  padding: 10px;
  margin-bottom: 8px;
  border: 1px solid var(--color-border);
}
.sec-head {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}
.section-title {
  flex: 1;
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text-primary);
}
.sec-count {
  display: inline-block;
  padding: 0 6px;
  background: rgba(255, 255, 255, 0.72);
  color: var(--color-text-primary);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  margin-left: 4px;
}
.sec-refresh {
  padding: 2px 8px;
  background: var(--color-bg-card);
  border-radius: 10px;
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}
.sec-refresh-hover {
  background: rgba(224, 242, 254, 0.8);
}
.sec-refresh.off {
  opacity: 0.4;
}

/* ===== 统计 ===== */
.stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 6px;
}
.st {
  text-align: center;
  padding: 8px 4px;
  background: var(--color-bg-card);
  border-radius: var(--radius-sm);
}
.st.hl {
  background: var(--color-bg-card);
}
.st-num {
  display: block;
  font-size: var(--font-size-lg); /* 二级标题/数值强调 */
  font-weight: 600;
  color: var(--color-text-primary);
}
.st.hl .st-num {
  color: var(--color-text-secondary);
}
.st-label {
  display: block;
  font-size: var(--font-size-xs);
  color: var(--color-text-disabled);
  margin-top: 2px;
}

/* ===== 历史记录 ===== */
.empty {
  text-align: center;
  padding: 20px;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary); /* 升级至secondary，确保对比度≥4.5:1 */
}
.hist {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  border-bottom: 1px solid #f5f6f8;
}
.hist:last-of-type {
  border-bottom: none;
}
.hist-left {
  flex: 1;
}
.hist-order {
  display: block;
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--color-text-primary);
}
.hist-detail {
  display: block;
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary); /* 升级至secondary，确保对比度≥4.5:1 */
  margin-top: 2px;
}
.hist-right {
  display: flex;
  align-items: center;
  gap: 6px;
}
.hist-tag {
  padding: 2px 6px;
  background: var(--color-bg-card);
  color: var(--color-text-secondary);
  border-radius: 6px;
  font-size: var(--font-size-xs);
}
.hist-tag.pending {
  color: #ff9800;
  background: #fff3e0;
  font-weight: 500;
}
.hist-qty {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  font-weight: 500;
}
.hist-action {
  font-size: var(--font-size-xs);
  color: var(--color-primary);
  padding: 3px 8px;
  border: 1px solid var(--color-primary);
  border-radius: 4px;
  margin-left: 4px;
  background: #e6f7ff;
  font-weight: 500;
}

/* ===== 采购任务卡片 ===== */
.procurement-task-card {
  margin-bottom: 12px;
  background: linear-gradient(135deg, #fff7ed 0%, #ffedd5 100%);
  border-radius: var(--radius-md);
  border: 1px solid #fed7aa;
  padding: 12px;
}

.ptc-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 6px;
}

.ptc-order {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text-primary);
}

.ptc-style {
  font-size: var(--font-size-sm);
  color: #ea580c;
  padding: 2px 8px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: var(--radius-sm);
}

.ptc-name {
  font-size: var(--font-size-sm);
  color: #9a3412;
  margin-bottom: 8px;
}

.ptc-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ptc-count {
  font-size: var(--font-size-sm);
  color: #ea580c;
  font-weight: 500;
}

.ptc-btn {
  padding: 6px 16px;
  background: var(--gradient-primary-alpha);
  color: var(--color-text-primary);
  font-size: var(--font-size-sm);
