/**
 * 生产详情页面样式
 * 表格式布局 - 筛选区 + Tab + 横向滚动表格
 */

page {
  background: var(--color-bg-page);
  padding-bottom: env(safe-area-inset-bottom);
}

/* ============ 筛选区域 ============ */

.filter-section {
  margin: 0 12px 8px;
  padding: 10px 12px;
  background: var(--color-bg-card);
  border-radius: var(--radius-xl);
  border: 1px solid var(--color-border);
}

/* 日期选择行 */
.date-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
}

.date-picker {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 6px 10px;
  background: rgba(224, 242, 254, 0.3);
  border: 1px solid rgba(224, 242, 254, 0.5);
  border-radius: var(--radius-full);
}

.date-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  flex-shrink: 0;
}

.date-value {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
  font-weight: 500;
}

.date-separator {
  font-size: var(--font-size-sm);
  color: var(--color-text-disabled);
  flex-shrink: 0;
}

/* search-row / search-box / search-icon / search-input
   search-btn / search-btn-hover / clear-btn / clear-btn-hover → app.wxss */
/* 全宽搜索框变体（配合 search-box 使用） */
.search-box-full { gap: 6px; }

/* ============ Tab 切换 ============ */

.tab-row {
  display: flex;
  gap: 0;
  margin: 0 12px 8px;
  background: var(--color-bg-card);
  border-radius: var(--radius-full);
  border: 1px solid var(--color-border);
  padding: 3px;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 7px 0;
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--color-text-secondary);
  border-radius: var(--radius-full);
  transition: all 0.2s ease;
}

.tab-active {
  background: var(--gradient-primary-alpha);
  color: var(--color-primary);
  font-weight: 600;
  box-shadow: 0 2px 6px rgba(59, 130, 246, 0.15);
}

.tab-item-hover {
  opacity: 0.8;
}

/* ============ 表格（一体横向滚动） ============ */

.table-wrap {
  margin: 0 12px;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  background: var(--color-bg-card);
  max-height: calc(100vh - 300px);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  white-space: nowrap;
}

.table-inner {
  display: inline-block;
  min-width: 100%;
}

.table-header {
  display: flex;
  align-items: center;
  padding: 8px 10px;
  background: rgba(224, 242, 254, 0.5);
  border-bottom: 1px solid var(--color-border);
  position: sticky;
  top: 0;
  z-index: 2;
}

.th {
  font-size: var(--font-size-xs);
  font-weight: 600;
  color: var(--color-text-secondary);
  flex-shrink: 0;
  text-align: center;
}

.table-row {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid var(--color-border-light);
}

.table-row:last-child {
  border-bottom: none;
}

.table-row-hover {
  background: rgba(224, 242, 254, 0.2);
}

.td {
  font-size: var(--font-size-xs);
  color: var(--color-text-primary);
  flex-shrink: 0;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 列宽分配 */
.th-worker, .td-worker { width: 50px; }
.th-order, .td-order { width: 100px; }
.th-bundle, .td-bundle { width: 56px; }
.th-process, .td-process { width: 50px; }
.th-price, .td-price { width: 42px; }
.th-color, .td-color { width: 46px; }
.th-qty, .td-qty { width: 36px; }
.th-size, .td-size { width: 36px; }
.th-time, .td-time { width: 42px; }
.th-action, .td-action { width: 48px; }

/* 可删除行样式（菲号删除 Tab） */
.row-deletable {
  padding-right: 6px;
}

.td-action {
  width: 48px;
  flex-shrink: 0;
}

.delete-btn {
  padding: 3px 8px;
  font-size: var(--font-size-xs);
  color: var(--color-error);
  background: rgba(239, 68, 68, 0.08);
  border: 1px solid rgba(239, 68, 68, 0.2);
  border-radius: var(--radius-full);
  text-align: center;
  font-weight: 500;
}

.delete-btn-hover {
  background: rgba(239, 68, 68, 0.15);
  transform: scale(0.95);
}

/* ============ 空状态 ============ */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48px 20px;
  margin: 0 12px;
  background: var(--color-bg-card);
  border-radius: var(--radius-xl);
  border: 1px solid var(--color-border);
}

.empty-icon {
  font-size: 40px;
  margin-bottom: 12px;
  opacity: 0.5;
}

.empty-text {
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
  font-weight: 500;
}

.empty-hint {
  margin-top: 6px;
  font-size: var(--font-size-xs);
  color: var(--color-text-disabled);
}

/* ============ 加载 ============ */

.loading-row {
  text-align: center;
  padding: 16px;
}

.loading-text {
  font-size: var(--font-size-sm);
  color: var(--color-text-disabled);
}

.load-more {
  text-align: center;
  padding: 12px;
  margin: 8px 12px;
  background: var(--color-bg-card);
  border-radius: var(--radius-full);
  border: 1px solid var(--color-border);
  font-size: var(--font-size-sm);
  color: var(--color-primary);
  font-weight: 500;
}

.load-more-hover {
  opacity: 0.7;
}

/* ============ 菲号删除提示 ============ */

.delete-tip {
  display: flex;
  align-items: center;
  gap: 6px;
  margin: 10px 12px;
  padding: 10px 12px;
  background: rgba(245, 158, 11, 0.06);
  border: 1px solid rgba(245, 158, 11, 0.2);
  border-radius: var(--radius-xl);
}

.tip-icon {
  font-size: var(--font-size-base);
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  line-height: 1.4;
}

.go-scan-btn {
  padding: 5px 14px;
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--color-primary);
  background: rgba(224, 242, 254, 0.8);
  border: 1px solid rgba(147, 197, 253, 0.5);
  border-radius: var(--radius-full);
  flex-shrink: 0;
  white-space: nowrap;
}

.go-scan-btn-hover {
  opacity: 0.7;
  transform: scale(0.96);
}

/* ============ 删除确认弹窗 ============ */

.confirm-info {
  padding: 8px 0;
}

.confirm-row {
  display: flex;
  align-items: center;
  padding: 6px 0;
}

.confirm-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  width: 64px;
  flex-shrink: 0;
}

.confirm-value {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
  font-weight: 500;
}

.confirm-warning {
  margin-top: 10px;
  padding: 8px 12px;
  font-size: var(--font-size-xs);
  color: var(--color-warning);
  background: rgba(245, 158, 11, 0.06);
  border: 1px solid rgba(245, 158, 11, 0.15);
  border-radius: var(--radius-md);
  text-align: center;
}
