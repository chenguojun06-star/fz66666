@import '../../../styles/inline-selector.wxss';
@import '../../../styles/page-utils.wxss';
@import '../../../styles/modal-form.wxss';

.container {
  min-height: 100vh;
  background: #f3f5f9;
  padding: 20rpx;
}

.notification-header {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  background: var(--color-bg-card);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.notification-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.notification-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}

.notification-count {
  background: var(--color-error);
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.loading,
.empty {
  text-align: center;
  padding: 100rpx 20rpx;
  color: var(--color-text-disabled);
  font-size: 28rpx;
}

/* empty-icon / empty-text → page-utils.wxss */

.user-list {
  padding-bottom: 20rpx;
}

.user-card {
  background: var(--color-bg-card);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, var(--color-primary) 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 8rpx;
}

.user-meta {
  font-size: 24rpx;
  color: var(--color-text-disabled);
}

.user-badge {
  background: var(--color-primary);
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
}

.user-details {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.detail-label {
  width: 140rpx;
  color: var(--color-text-secondary);
  font-size: 26rpx;
}

.detail-value {
  flex: 1;
  color: var(--color-text-primary);
  font-size: 26rpx;
}

.user-actions {
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.reject-btn {
  background: var(--color-bg-card);
  color: var(--color-error);
  border: 2rpx solid var(--color-error);
}

.approve-btn {
  background: var(--color-success);
  color: #fff;
}

/* .load-more / .load-more.disabled → page-utils.wxss */

/* 弹窗页面专用样式 */
.modal-text {
  font-size: 28rpx;
  color: var(--color-text-primary);
  margin-bottom: 8rpx;
}

.highlight {
  color: var(--color-primary);
  font-weight: 600;
}

.modal-hint {
  font-size: 24rpx;
  color: var(--color-text-disabled);
  margin-bottom: 12rpx;
}

.modal-hint.danger {
  color: var(--color-error);
}

.required {
  color: var(--color-error);
}
