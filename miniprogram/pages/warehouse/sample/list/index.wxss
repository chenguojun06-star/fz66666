@import '../../../../styles/inline-selector.wxss';
@import '../../../../styles/page-utils.wxss';
@import '../../../../styles/modal-form.wxss';

.container {
  height: 100vh;
  background-color: var(--color-bg-gray);
  display: flex;
  flex-direction: column;
}

.search-bar {
  padding: 20rpx;
  background-color: var(--color-bg-card);
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background-color: var(--color-bg-gray);
  border-radius: 36rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  flex: 1;
  margin-left: 10rpx;
  font-size: 28rpx;
}

.scan-icon {
  padding: 10rpx;
}

.summary-filter-bar {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 20rpx;
  background-color: var(--color-bg-card);
  margin-bottom: 20rpx;
}

.summary-pill {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  border: 1rpx solid var(--color-border-light);
  border-radius: 12rpx;
  padding: 18rpx 20rpx;
  background-color: var(--color-bg-card);
}

.summary-pill-active {
  border-color: var(--color-primary);
  background-color: var(--color-primary-light);
}

.summary-label {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

.summary-value {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.list-container {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.list-item {
  background-color: var(--color-bg-card);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
}

.item-img {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #eee;
  margin-right: 20rpx;
}

.item-img-placeholder {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: var(--color-bg-gray);
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--color-text-disabled);
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-op-row {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.item-op-btn {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  border: 1rpx solid var(--color-border-light);
  border-radius: 20rpx;
  padding: 4rpx 16rpx;
  background-color: var(--color-bg-gray);
}

.item-op-btn-primary {
  color: var(--color-primary);
  border-color: var(--color-primary);
  background-color: var(--color-primary-light);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--color-text-primary);
}

.item-tags .tag {
  font-size: 20rpx;
  background-color: #e6f7ff;
  color: var(--color-primary);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.item-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

.item-spec {
  font-size: 24rpx;
  color: var(--color-text-disabled);
  margin-top: 8rpx;
}

.ml-10 { margin-left: 20rpx; }
.ml-20 { margin-left: 40rpx; }

.item-stock {
  display: flex;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.item-actions {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
}

.action-link {
  font-size: 24rpx;
  color: var(--color-primary);
  padding: 6rpx 16rpx;
  border: 1rpx solid #d6e8ff;
  border-radius: 20rpx;
  background-color: #f5f9ff;
}

.stock-info {
  font-size: 24rpx;
}

.stock-info .label {
  color: var(--color-text-disabled);
}

.stock-info .value {
  font-weight: bold;
  margin-left: 8rpx;
  font-size: 28rpx;
}

.green { color: var(--color-success); }
.orange { color: var(--color-warning); }

/* empty-state / empty-img / loading-more / no-more → page-utils.wxss */

/* 弹窗表单 — 已迁移至 /styles/modal-form.wxss（mf-* 类名） */
/* 页面专用覆盖 */
.stock-selection {
  margin-bottom: 8px;
}

.stock-info {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.stock-spec {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
  font-weight: 600;
}

.stock-type {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

.stock-qty {
  font-size: var(--font-size-xs);
  color: var(--color-primary);
}

/* 借出记录列表 */
.loan-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.loan-item {
  padding: 8px 10px;
  background: var(--color-bg-light, #f8fafc);
  border-radius: 6px;
  border: 1px solid var(--color-border);
}

.loan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.loan-borrower {
  font-size: var(--font-size-sm);
  font-weight: 600;
  color: var(--color-text-primary);
}

.loan-status {
  font-size: var(--font-size-xs);
  padding: 1px 6px;
  border-radius: 4px;
}

.loan-status.ongoing {
  background-color: #fff3d9;
  color: #ff9800;
}

.loan-status.returned {
  background-color: #e7f7ea;
  color: #28a745;
}

.loan-status.lost {
  background-color: #ffebee;
  color: #f44336;
}
