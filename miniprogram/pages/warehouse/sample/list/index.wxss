@import '/styles/inline-selector.wxss';

.container {
  height: 100vh;
  background-color: var(--color-bg-gray);
  display: flex;
  flex-direction: column;
}

.search-bar {
  padding: 20rpx;
  background-color: var(--color-bg-card);
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background-color: var(--color-bg-gray);
  border-radius: 36rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  flex: 1;
  margin-left: 10rpx;
  font-size: 28rpx;
}

.scan-icon {
  padding: 10rpx;
}

.summary-filter-bar {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 20rpx;
  background-color: var(--color-bg-card);
  margin-bottom: 20rpx;
}

.summary-pill {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  border: 1rpx solid var(--color-border-light);
  border-radius: 12rpx;
  padding: 18rpx 20rpx;
  background-color: var(--color-bg-card);
}

.summary-pill-active {
  border-color: var(--color-primary);
  background-color: var(--color-primary-light);
}

.summary-label {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

.summary-value {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.list-container {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.list-item {
  background-color: var(--color-bg-card);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
}

.item-img {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #eee;
  margin-right: 20rpx;
}

.item-img-placeholder {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: var(--color-bg-gray);
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--color-text-disabled);
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-op-row {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.item-op-btn {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  border: 1rpx solid var(--color-border-light);
  border-radius: 20rpx;
  padding: 4rpx 16rpx;
  background-color: var(--color-bg-gray);
}

.item-op-btn-primary {
  color: var(--color-primary);
  border-color: var(--color-primary);
  background-color: var(--color-primary-light);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--color-text-primary);
}

.item-tags .tag {
  font-size: 20rpx;
  background-color: #e6f7ff;
  color: var(--color-primary);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.item-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

.item-spec {
  font-size: 24rpx;
  color: var(--color-text-disabled);
  margin-top: 8rpx;
}

.ml-10 { margin-left: 20rpx; }
.ml-20 { margin-left: 40rpx; }

.item-stock {
  display: flex;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.item-actions {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
}

.action-link {
  font-size: 24rpx;
  color: var(--color-primary);
  padding: 6rpx 16rpx;
  border: 1rpx solid #d6e8ff;
  border-radius: 20rpx;
  background-color: #f5f9ff;
}

.stock-info {
  font-size: 24rpx;
}

.stock-info .label {
  color: var(--color-text-disabled);
}

.stock-info .value {
  font-weight: bold;
  margin-left: 8rpx;
  font-size: 28rpx;
}

.green { color: var(--color-success); }
.orange { color: var(--color-warning); }

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  color: var(--color-text-disabled);
  font-size: 28rpx;
}

.empty-img {
  width: 200rpx;
  margin-bottom: 20rpx;
}

.loading-more, .no-more {
  text-align: center;
  padding: 20rpx;
  color: var(--color-text-disabled);
  font-size: 24rpx;
}

/* 弹窗内容区样式（外层容器由 mp-modal 组件提供） */
.form-item {
  margin-bottom: 24rpx;
}

.form-item .label {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 12rpx;
}

.form-item input,
.form-item textarea,
.form-item .picker {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid var(--color-border-light);
  border-radius: 8rpx;
  background-color: var(--color-bg-gray);
  box-sizing: border-box;
}

.form-item .picker {
  color: var(--color-text-primary);
}

.input-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.input-wrap input {
  flex: 1;
}

.scan-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-primary);
  border-radius: 8rpx;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.flex-1 {
  flex: 1;
}

.section-label {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 12rpx;
}

.stock-selection {
  margin-bottom: 24rpx;
}

.stock-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid var(--color-border-light);
  border-radius: 8rpx;
  background-color: var(--color-bg-gray);
}

.stock-item.active {
  border-color: var(--color-primary);
  background-color: var(--color-primary-light);
}

.stock-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stock-spec {
  font-size: 28rpx;
  color: var(--color-text-primary);
  font-weight: 600;
}

.stock-type {
  font-size: var(--font-size-sm);  /* 修复：原24rpx太小导致文字截断 */
  color: var(--color-text-secondary);
}

.stock-qty {
  font-size: 26rpx;
  color: var(--color-primary);
}

.loading-stock {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: var(--color-text-disabled);
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  border-top: 1rpx solid var(--color-border-light);
}

.btn {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.btn.cancel {
  background-color: var(--color-bg-gray);
  color: var(--color-text-secondary);
}

.btn.ok {
  background-color: var(--color-primary);
  color: #fff;
}

.btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.btn.full-width {
  flex: unset;
  width: 100%;
}

/* 借出记录列表 */
.loading-state {
  text-align: center;
  padding: 60rpx;
  font-size: 26rpx;
  color: var(--color-text-disabled);
}

.loan-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.loan-item {
  padding: 20rpx;
  background-color: var(--color-bg-gray);
  border-radius: 8rpx;
  border: 1rpx solid var(--color-border-light);
}

.loan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.loan-borrower {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}

.loan-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.loan-status.ongoing {
  background-color: #fff3d9;
  color: #ff9800;
}

.loan-status.returned {
  background-color: #e7f7ea;
  color: #28a745;
}

.loan-status.lost {
  background-color: #ffebee;
  color: #f44336;
}

.loan-info {
  display: flex;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.loan-label {
  color: var(--color-text-disabled);
  margin-right: 12rpx;
}

.loan-value {
  color: var(--color-text-secondary);
}
