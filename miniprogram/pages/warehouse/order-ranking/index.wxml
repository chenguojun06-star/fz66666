<view class="container">
  <view class="summary">
    <text class="summary-title">下单排行 TOP{{list.length}}</text>
    <text class="summary-sub">数据与PC同步</text>
  </view>

  <view wx:if="{{loading}}" class="loading">加载中...</view>

  <view wx:if="{{!loading && list.length === 0}}" class="empty">
    <image src="/assets/icons/empty.svg" class="empty-icon" />
    <text>暂无排行数据</text>
  </view>

  <view class="ranking-grid">
    <view
      wx:for="{{list}}"
      wx:key="id"
      class="ranking-item"
      bindtap="onCreateOrder"
      data-item="{{item}}"
    >
      <view class="rank-badge">{{item.rank}}</view>
      <view class="rank-info">
        <text class="rank-title" title="{{item.styleNo}}">{{item.styleNo}}</text>
        <text class="rank-sub">{{item.styleName || '-'}}</text>
      </view>
      <view class="rank-count">{{item.orderCount || 0}}次</view>
    </view>
  </view>
</view>
