page {
  background: var(--color-bg-page);
  padding-bottom: calc(60px + env(safe-area-inset-bottom));
}

/* 搜索栏/搜索结果样式已移至 app.wxss 统一管理 */

/* home 页面特有：搜索结果间距调整 */
.global-results {
  margin-bottom: 16px;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item-hover {
  background: rgba(224, 242, 254, 0.3);
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6px;
}

.result-type {
  padding: 2px 8px;
  font-size: var(--font-size-xs);
  font-weight: 500;
  color: #ffffff;
  background: var(--color-primary);
  border-radius: var(--radius-full);
}

.result-status {
  font-size: var(--font-size-sm);
  font-weight: 500;
}

.result-info {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 4px;
}

.result-order,
.result-style {
  font-size: 13px;
  color: var(--color-text-primary);
}

.result-detail {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  margin-top: 4px;
}

/* 无搜索结果 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 20px;
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  margin-bottom: 16px;
}

.no-results-icon {
  font-size: 48px;
  margin-bottom: 12px;
  opacity: 0.3;
}

.no-results-text {
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
  margin-bottom: 16px;
}

.no-results .close-btn {
  padding: 8px 24px;
  font-size: var(--font-size-base);
  color: var(--color-text-primary);
  background: rgba(224, 242, 254, 0.8);
  border: 1px solid rgba(224, 242, 254, 0.9);
  border-radius: var(--radius-full);
}

/* 右上角提醒按钮 */
.reminder-btn {
  position: fixed;
  top: 20px;
  right: 20px;
  width: 40px;
  height: 40px;
  background: transparent;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.reminder-btn-hover {
  background: rgba(224, 242, 254, 0.8);
}

.reminder-icon {
  width: 24px;
  height: 24px;
  opacity: 0.6;
}

.reminder-badge {
  position: absolute;
  top: -4px;
  right: -4px;
  min-width: 18px;
  height: 18px;
  background: var(--color-error);
  color: #ffffff;
  border-radius: 9px;
  font-size: 10px; /* 极小字体 */
  line-height: 18px;
  text-align: center;
  padding: 0 4px;
  font-weight: 600;
  border: 2px solid #ffffff;
}

/* 提醒面板 */
.reminder-panel {
  position: fixed;
  top: 0;
  right: -320px;
  width: 320px;
  height: 100vh;
  background: var(--color-bg-card);
  box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);
  transition: right 0.3s ease;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.reminder-panel.show {
  right: 0;
}

.reminder-panel-header {
  padding: 16px;
  border-bottom: 1px solid var(--color-border);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reminder-panel-title {
  font-size: var(--font-size-lg); /* 二级标题 */
  font-weight: 600;
  color: var(--color-text-primary);
}

.reminder-panel-close {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: var(--color-bg-gray);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text-secondary);
  font-size: var(--font-size-xl); /* 一级标题/图标 */
}
.reminder-panel-close-hover {
  background: rgba(224, 242, 254, 0.8);
}

.reminder-panel-content {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding: 12px;
}

.reminder-empty {
  text-align: center;
  color: var(--color-text-disabled);
  padding: 40px 20px;
  font-size: var(--font-size-base); /* 正文字体 */
}

.reminder-item {
  background: var(--color-bg-light);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  padding: 12px;
  margin-bottom: 10px;
}
.reminder-item-hover {
  background: rgba(224, 242, 254, 0.8);
}

.reminder-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
}

.reminder-item-title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text-primary);
}

.reminder-item-time {
  font-size: var(--font-size-sm);
  color: var(--color-text-disabled);
}

.reminder-item-desc {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

/* 遮罩层 */
.reminder-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
}

.title {
  font-size: var(--font-size-lg); /* 二级标题 */
  font-weight: 600;
  margin-bottom: 10px;
  color: var(--color-text-primary);
}

.home-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-bottom: 8px;
}

.btn-secondary-hover {
  background: rgba(224, 242, 254, 0.8); /* 很浅的雾蓝色 */
}

.home-section-title {
  margin-top: 10px;
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text-primary);
}

.home-filter {
  margin-top: 8px;
  padding: 10px 12px;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  background: var(--color-bg-card);
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.filter-row {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10px;
}

.filter-field {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.filter-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.filter-input {
  border: 1px solid var(--color-border);
  border-radius: var(--radius-full);
  padding: 8px 12px;
  font-size: var(--font-size-base);
  color: var(--color-text-primary);
  background: var(--color-bg-card);
}

.filter-text {
  border: 1px solid var(--color-border);
  border-radius: var(--radius-full);
  padding: 8px 12px;
  font-size: var(--font-size-base);
  color: var(--color-text-primary);
  background: var(--color-bg-card);
}

.filter-actions {
  display: flex;
  gap: 10px;
  justify-content: flex-end;
}

/* 数据概览 - 对齐PC顶部4卡片（日/周/月/年+总） */
.home-stats-grid {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-top: 10px;
  margin-bottom: 12px;
}

.home-stat-card {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 12px 16px;
  background: var(--color-bg-card);
  border: 1.5px solid var(--color-border);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
}

.stat-head {
  display: flex;
  align-items: center;
  gap: 8px;
}

.stat-card-emoji {
  font-size: 20px;
  flex-shrink: 0;
}

.stat-card-label {
  font-size: 14px;
  color: var(--color-text-primary);
  font-weight: 600;
  flex-shrink: 0;
}

.stat-total {
  font-size: 20px;
  font-weight: 700;
  color: var(--color-text-primary);
  line-height: 1;
  margin-left: auto;
}

.stat-tags-row {
  display: flex;
  gap: 6px;
}

.stat-tag {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
  padding: 4px 0;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-sm);
  background: var(--color-bg-light);
}

.tag-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

.tag-value {
  font-size: 12px;
  font-weight: 700;
  color: var(--color-text-primary);
}

.stat-sample {
  border-color: var(--color-border);
}

.stat-bulk {
  border-color: var(--color-primary);
}

.stat-cutting {
  border-color: var(--color-warning, #f59e0b);
}

.stat-warehousing {
  border-color: var(--color-success, #10b981);
}

/* 保留旧胶囊行样式以兼容 */
.home-stats-row {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 12px;
  padding: 6px 16px;
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: 24px;
  box-shadow: var(--shadow-md);
}

.home-stat-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 3px 14px;
  background: rgba(224, 242, 254, 0.3);
  border: 1px solid rgba(224, 242, 254, 0.5);
  border-radius: 20px;
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
}

.home-stat-left {
  display: flex;
  align-items: center;
  gap: 2px;
}

.home-stat-emoji {
  font-size: var(--font-size-base);
  opacity: 0.8;
}

.home-stat-label {
  font-size: 13px;
  font-weight: 600;
  color: var(--color-text-secondary);
}

.home-stat-value {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--color-text-primary);
}

.home-stats {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10px;
  margin-top: 8px;
}

.home-stat {
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  padding: 10px 12px;
  background: var(--color-bg-card);
}

.home-stat-head {
  display: flex;
  align-items: center;
  gap: 8px;
}

/* Emoji图标样式 */
.home-stat-emoji {
  font-size: var(--font-size-2xl);
  opacity: 0.8;
}

.home-stat-icon-wrap {
  width: 24px;
  height: 24px;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none;
}

.home-stat-icon {
  width: 16px;
  height: 16px;
}

.icon-order {
  background: rgba(99, 102, 241, 0.12);
}

.icon-stock {
  background: rgba(16, 185, 129, 0.12);
}

.icon-purchase {
  background: rgba(249, 115, 22, 0.12);
}

.icon-defect {
  background: rgba(239, 68, 68, 0.12);
}

.home-stat-value {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text-primary);
}

.home-stat-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.home-entries {
  display: grid;
  grid-template-columns: repeat(5, minmax(0, 1fr));
  gap: 8px;
  margin-top: 10px;
}

.home-entry {
  border: none;
  background: var(--gradient-action);
  color: #ffffff;
  border-radius: var(--radius-full);
  padding: 3px 8px;
  text-align: center;
  font-size: var(--font-size-xs);
  font-weight: 500;
  min-height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 3px 10px rgba(37, 99, 235, 0.30);
}

.home-entry-hover {
  opacity: 0.85;
}

.home-activity {
  padding: 10rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.04);
}

.home-activity:last-child {
  border-bottom: none;
}

.home-activity-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.home-activity-icon {
  width: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 24rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.home-activity-icon--production {
  background: #e6fffb;
}

.home-activity-icon--style {
  background: #e6f4ff;
}

.home-activity-icon--scan {
  background: #f9f0ff;
}

.home-activity-icon--material {
  background: #f6ffed;
}

.home-activity-content {
  flex: 1;
  font-size: var(--font-size-xs);
  color: var(--color-text-primary);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.home-activity-time {
  font-size: 20rpx;
  color: var(--color-text-disabled);
  white-space: nowrap;
}
