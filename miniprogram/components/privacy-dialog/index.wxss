/* 隐私授权弹窗样式 */
.privacy-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.55);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.privacy-box {
  width: 620rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx 36rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.18);
}

.privacy-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 32rpx;
}

.privacy-content {
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 24rpx;
}

.privacy-link {
  font-size: 26rpx;
  color: #1677ff;
  text-align: center;
  margin-bottom: 40rpx;
  padding: 8rpx 0;
}

.privacy-actions {
  display: flex;
  gap: 24rpx;
}

.privacy-btn-refuse {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f5f5f5;
  color: #666;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.privacy-btn-agree {
  flex: 2;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #1677ff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  /* 重置 button 默认样式 */
  border: none;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.privacy-btn-agree::after {
  border: none;
}
